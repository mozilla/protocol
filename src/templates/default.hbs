{{#extend "blank" htmlclass="no-js" bodyclass=""}}
  {{#content "head" mode="append"}}
    <link rel="stylesheet" href="{{@root.baseurl}}/assets/css/protocol/protocol.css">
    <link rel="stylesheet" href="{{@root.baseurl}}/assets/css/site/site.css">
    <link rel="stylesheet" href="{{@root.baseurl}}/assets/css/site/prism.css">
  {{/content}}

  {{#content "body"}}
    {{> drizzle.nav}}

    <main class="protosite-main">
    {{#block "header"}}
      {{!-- Header, labels --}}
      <header class="protosite-page-head">
        <h1 class="protosite-page-title">
        {{#if title}}
          {{ title }}
        {{else}}
          {{ name }}
        {{/if}}
        </h1>

        {{#if labels}}
          <ul class="protosite-page-labels">
            {{#each labels as |label|}}
              <li class="protosite-label protosite-label-{{label}}">
                {{label}}
              </li>
            {{/each}}
          </ul>
        {{/if}}
      </header>
    {{/block}}

    {{#block "main"}}{{/block}}
    </main>
  {{/content}}

  {{#content "foot"}}
    <script src="{{@root.baseurl}}/assets/js/global.js"></script>
    <script src="{{@root.baseurl}}/assets/js/prism.js"></script>
  {{/content}}
{{/extend}}
