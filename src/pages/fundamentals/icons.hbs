<script>
  document.querySelectorAll(".img-group").forEach( element => {
    element.addEventListener("click", copyImgUrl);
  })

  async function copyImgUrl(event){
    const element = event.currentTarget;
    const imageLink = element.attributes[1].textContent;
    try {
      await navigator.clipboard.writeText(imageLink);
      document.querySelectorAll(".img-group p.fade").forEach( element => {
        element.classList.remove('fade');
      });
      element.lastElementChild.classList.add('fade');
      setTimeout(() => {
        element.lastElementChild.classList.remove('fade');
      }, 3000);
    } catch {
      /* clipboard write failed */
      console.log('Copy Failed!');
    }
  };
</script>
